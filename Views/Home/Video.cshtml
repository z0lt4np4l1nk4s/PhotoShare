@using PagedList;
@using PagedList.Mvc;
@model IPagedList<PhotoShare.Models.PhotoVideo>

@{
    ViewBag.Title = "Video";
}
@if (Request.IsAuthenticated)
{
    <h2>
        @Html.ActionLink("Dodaj", "Create", "PhotoVideo")
    </h2>
}
<br />
@using (Html.BeginForm("Video", "Home", FormMethod.Get, new { page = Request.QueryString["page"], search = Request.QueryString["search"], searchBy = Request.QueryString["searchBy"] }))
{
    if (!string.IsNullOrEmpty(Request.QueryString["searchBy"]))
    {
        if (Request.QueryString["searchBy"] == "Tag")
        {
            <input type="radio" name="searchBy" value="Tag" checked="checked" />
        }
        else
        {
            <input type="radio" name="searchBy" value="Tag" />
        }
        <text>Tag</text>
        if (Request.QueryString["searchBy"] == "Naziv")
        {
            <input type="radio" name="searchBy" value="Naziv" checked="checked" />
        }
        else
        {
            <input type="radio" name="searchBy" value="Naziv" />
        }
        <text>Naziv</text>
    }
    else
    {
        <input type="radio" name="searchBy" value="Tag" checked="checked" />
        <text>Tag</text>
        <input type="radio" name="searchBy" value="Naziv" />
        <text>Naziv</text>
    }
    <br />
    <input type="text" name="search" />
    <input type="submit" value="Pretraži" />
    @Html.ActionLink("Obriši filter", "Video")
}
<table class="table">
    <tr>
        <th style="text-align:center;vertical-align:middle;">
            Video
        </th>
        <th style="text-align:center;vertical-align:middle;"></th>
        <th style="text-align:center;vertical-align:middle;">
            @Html.DisplayNameFor(model => model.FirstOrDefault().Naziv)
        </th>
        <th style="text-align:center;vertical-align:middle;">
            @Html.DisplayNameFor(model => model.FirstOrDefault().DatumObjave)
        </th>
        <th style="text-align:center;vertical-align:middle;">
            Tagovi
        </th>
        @if (Request.IsAuthenticated)
        {
            <th style="text-align:center;vertical-align:middle;width:60px"></th>
        }
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="5" style="text-align:center;vertical-align:middle;">
                Nema rezultata
            </td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr style="height:240px">
                <td style="text-align:center;vertical-align:middle;width:250px;height:250px">
                    <div class="video">
                        <video style="max-width:250px;max-height:250px;" loop preload="metadata">
                            <source src="@Url.Content(item.Path)" type="@PhotoShare.Common.MimeTypes.GetMimeType(System.IO.Path.GetExtension(item.Path))">
                        </video>
                    </div>
                </td>
                <td style="text-align:center;vertical-align:middle;">
                    @if (!string.IsNullOrEmpty(item.Path))
                    {
                        <input type="button" value="Otvori" onclick="window.open('@Url.Content(item.Path)', '_blank')" />
                    }
                </td>
                <td style="text-align:center;vertical-align:middle;">
                    @Html.DisplayFor(modelItem => item.Naziv)
                </td>
                <td style="text-align:center;vertical-align:middle;">
                    @Html.DisplayFor(modelItem => item.DatumObjave)
                </td>
                <td style="text-align:center;vertical-align:middle;">
                    @Html.Partial("_PostTags", item)
                </td>
                @if (Request.IsAuthenticated)
                {
                    <td style="text-align:center;vertical-align:middle;">
                        @Html.ActionLink("Uredi", "Edit", "PhotoVideo", new { id = item.ID }, null)
                        @Html.ActionLink("Detalji", "Details", "PhotoVideo", new { id = item.ID }, null)
                        @Html.ActionLink("Obriši", "Delete", "PhotoVideo", new { id = item.ID }, null)
                    </td>
                }
            </tr>
        }
    }

</table>
<div style="text-align:center">
    @Html.PagedListPager(Model, page => Url.Action("Video", new { page, search = Request.QueryString["search"], searchBy = Request.QueryString["searchBy"] }), new PagedListRenderOptions { Display = PagedListDisplayMode.IfNeeded })
</div>

<script type="text/javascript" language="javascript">
    var figure = $(".video").hover(hoverVideo, hideVideo);

    function hoverVideo(e) {
        $('video', this).get(0).play();
    }

    function hideVideo(e) {
        $('video', this).get(0).pause();
    }
</script>
