@using PagedList;
@using PagedList.Mvc;
@model IPagedList<PhotoShare.Models.PhotoVideo>

@{
    ViewBag.Title = "Index";
}
@if (Request.IsAuthenticated)
{
    <h2>
        @Html.ActionLink("Dodaj", "Create", "PhotoVideo")
    </h2>
}
<br />
@using (Html.BeginForm("Slika", "Home", FormMethod.Get, new { page = Request.QueryString["page"], search = Request.QueryString["search"], searchBy = Request.QueryString["searchBy"] }))
{
    if (!string.IsNullOrEmpty(Request.QueryString["searchBy"]))
    {
        if (Request.QueryString["searchBy"] == "Tag")
        {
            <input type="radio" name="searchBy" value="Tag" checked="checked" />
        }
        else
        {
            <input type="radio" name="searchBy" value="Tag" />
        }
        <text>Tag</text>
        if (Request.QueryString["searchBy"] == "Naziv")
        {
            <input type="radio" name="searchBy" value="Naziv" checked="checked" />
        }
        else
        {
            <input type="radio" name="searchBy" value="Naziv" />
        }
        <text>Naziv</text>
    }
    else
    {
        <input type="radio" name="searchBy" value="Tag" checked="checked" />
        <text>Tag</text>
        <input type="radio" name="searchBy" value="Naziv" />
        <text>Naziv</text>
    }
    <br />
    <input type="text" name="search" />
    <input type="submit" value="Pretraži" />
    @Html.ActionLink("Obriši filter", "Slika")
}
<table class="table">
    <tr>
        <th style="text-align:center;vertical-align:middle;">
            Slika
        </th>
        <th style="text-align:center;vertical-align:middle;">
            @Html.DisplayNameFor(model => model.FirstOrDefault().Naziv)
        </th>
        <th style="text-align:center;vertical-align:middle;">
            @Html.DisplayNameFor(model => model.FirstOrDefault().DatumObjave)
        </th>
        <th style="text-align:center;vertical-align:middle;">
            Tagovi
        </th>
        @if (Request.IsAuthenticated)
        {
            <th style="text-align:center;vertical-align:middle;width:60px;"></th>
        }
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="4" style="text-align:center;vertical-align:middle;">
                Nema rezultata
            </td>
        </tr>
    }
    else
    {
        foreach (var item in Model)
        {
            <tr>
                <td style="text-align:center;vertical-align:middle;">
                    @if (!string.IsNullOrEmpty(item.Path))
                    {
                        <img src="@Url.Content(item.Path)" alt="No photo" style="max-width:250px;max-height:250px;" />
                    }
                </td>
                <td style="text-align:center;vertical-align:middle;">
                    @Html.DisplayFor(modelItem => item.Naziv)
                </td>
                <td style="text-align:center;vertical-align:middle;">
                    @Html.DisplayFor(modelItem => item.DatumObjave)
                </td>
                <td style="text-align:center;vertical-align:middle;">
                    @Html.Partial("_PostTags", item)
                </td>
                @if (Request.IsAuthenticated)
                {
                    <td style="text-align:center;vertical-align:middle;">
                        @Html.ActionLink("Uredi", "Edit", "PhotoVideo", new { id = item.ID }, null)
                        @Html.ActionLink("Detalji", "Details", "PhotoVideo", new { id = item.ID }, null)
                        @Html.ActionLink("Obriši", "Delete", "PhotoVideo", new { id = item.ID }, null)
                    </td>
                }
            </tr>
        }
    }

</table>
<div style="text-align:center">
    @Html.PagedListPager(Model, page => Url.Action("Slika", new { page, search = Request.QueryString["search"] }), new PagedListRenderOptions { Display = PagedListDisplayMode.IfNeeded })
</div>